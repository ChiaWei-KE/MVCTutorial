@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (@Model.Count == 0)
{
    <p>We don't have any customers yet.</p>
}
else {
    <table class="table table-bordered table-hover ">
        <thead>
            <tr>
                <th>Customers</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var cust in @Model) {
                <tr><td><a href="@Url.Action("Details", "Customers", new {id = @cust.Id})">@cust.Name</a></td></tr>
            }
        </tbody>

    </table>

