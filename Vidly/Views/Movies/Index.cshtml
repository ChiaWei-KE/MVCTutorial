@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<div class="form-group">
    <a class="btn btn-primary" href="@Url.Action("Create", "Movies")">Create New</a>
</div>

@if (@Model.Count == 0) {
    <p>We don't have any movies yet.</p>
}
else {
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var movie in @Model) {
                <tr>
                    <td><a href="@Url.Action("Edit", "Movies", new {id = @movie.Id})">@movie.Name</a></td>
                    <td>@movie.Genre.Name</td>
                </tr>
            }
        </tbody>

    </table>
}

